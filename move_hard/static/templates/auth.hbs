<div class="col-md-6 col-md-offset-3">
  <form class="form-horizontal" role="form" {{action 'login' on='submit'}}>
    <div {{bind-attr class='errors.username:has-error :form-group'}}>
      <label for="username" class="col-sm-2 control-label">Username:</label>
      <div class="col-sm-6">
        {{input class="form-control" id="username" value=username type='text' placeholder='Username' autofocus="autofocus"}}
      </div>
      <div class="help-block col-sm-4">{{errors.username}}</div>
    </div>
    <div {{bind-attr class='errors.password:has-error :form-group'}}>
      <label for="password" class="col-sm-2 control-label">Password:</label>
      <div class="col-sm-6">
        {{input class="form-control" id="password" value=password type='password' placeholder='Password'}}
      </div>
      <div class="help-block col-sm-4">{{errors.password}}</div>
    </div>
    {{#if errors.non_field_errors}}
    <div class="col-sm-10 col-sm-offset-2 has-error">
      <div class="help-block">
        {{errors.non_field_errors}}
      </div>
    </div>
    {{/if}}
    <div class="col-sm-10 col-sm-offset-2">
      {{input type='submit' value='Log in' class="btn btn-default"}}
    </div>
  </form>
</div>
